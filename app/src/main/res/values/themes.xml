<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Brainrush" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Tema Splash untuk Android 12+ dan fallback via core-splashscreen -->
    <style name="Theme.Brainrush.Splash" parent="Theme.Brainrush">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.Brainrush</item>
    </style>
</resources>